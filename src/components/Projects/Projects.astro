---
import Card from './Components/Card.astro'

import { getI18N } from '@i18n/index'
const i18n = getI18N(Astro.currentLocale)
---

<section class="pt-16 px-5" id="#experience">
  <div class="flex flex-col gap-1 items-center">
    <h2 class="text-black dark:text-white font-['Geist Bold'] font-bold text-3xl text-center">{i18n.PROJECTS.TITLE}</h2>
    <p class="text-secondary-light-text dark:text-secondary-dark-text text-center max-w-[600px] text-pretty text-sm">{i18n.PROJECTS.DESCRIPTION}</p>
  </div>

  <div class="flex justify-center items-center md:items-stretch flex-col md:flex-row gap-5 mt-11 md:mt-14 mb-8">
    <Card
      title='Bucked Up'
      description={i18n.PROJECTS['BUCKEDUP-DESCRIPTION']}
      image='/buckedup.png'
      logo='/buckedup-logo.png'
      tech={['React.js', 'JavaScript', 'LESS', 'Typescript']}
      link='https://buckedup.com'
    />

    <Card
      title='B-Large'
      description={i18n.PROJECTS['B-LARGE-DESCRIPTION']}
      image='/b-large.png'
      logo='/b-large-logo.png'
      tech={['Next.js', 'JavaScript', 'SASS', 'TypeScript', 'MongoDB', 'Puppeter']}
      link='https://b-large.com'
    />

    <!-- <Card
      title='Bucked Up'
      description='Estes es  mi trabajo actual, se trata de un e-commerce de una empresa de estados unidos, en la cual trabajaba como desarrollador frontend'
      image='/buckedup.png'
      logo='/buckedup-logo.png'
      tech={['React.js', 'JavaScript', 'LESS', 'Typescript']}
      link='https://buckedup.com'
    /> -->
  </div>
</section>