---
import { getI18N } from '@i18n/index'
const i18n = getI18N(Astro.currentLocale)
---

<section class="grid grid-cols-4 lg:grid-cols-[repeat(5,_minmax(100px,_1fr))] place-items-center auto-rows-[100px_auto_auto] md:auto-rows-[200px_auto] relative bg-[rgba(255,_255,_255,_.4)] dark:bg-[rgba(0,_0,_0,_.5)]" id="about">

  <div class="w-full h-full grid place-items-center border-r border-b border-outline-light dark:border-outline-dark col-span-4 md:col-span-2 relative">
    <span class="inline-block w-[20px] h-[20px] absolute bottom-[-10px] md:top-[-11px] left-[-11px]"/>
    <span class="hidden sm:inline-block w-[20px] h-[20px] absolute bottom-[-10px] right-[-10px]"/>
    <h2 class="text-black dark:text-white font-['Geist Bold'] font-bold text-3xl text-center">{i18n['ABOUT-ME'].TITLE}</h2>
  </div>

  <div class="p-4 md:p-12 text-sm md:text-xl w-full h-full grid place-items-center border-r md:border-b border-outline-light dark:border-outline-dark col-span-4 md:col-span-3 bg-hover-light/80 dark:bg-hover-dark/60">
    <p class="text-secondary-light-text dark:text-secondary-dark-text text-pretty">{i18n['ABOUT-ME']['PARAGRAPHS'][0]}</p>
  </div>

  <div class="p-4 md:p-12 text-sm md:text-xl w-full h-full grid place-items-center border-r border-b border-outline-light dark:border-outline-dark col-span-4 md:col-span-5">
    {
      i18n['ABOUT-ME']['PARAGRAPHS'].slice(1).map((p, i) => (
        <p class={`${(i18n['ABOUT-ME']['PARAGRAPHS'].slice(1).length - 1) === i ? '' : 'pb-5' } text-secondary-light-text dark:text-secondary-dark-text text-pretty w-full`}>{p}</p>
      ))
    }
  </div>
  <span class="inline-block w-[20px] h-[20px] absolute bottom-[-10px] right-[-10px]"/>
</section>

<style>
  span::before, span::after {
    content: '';
    position: absolute;
    background-color: #666;
    display: inline-block;
  }

  span::before {
    top: 10px;
    width: 20px;
    height: 1px;
  }

  span::after {
    left: 10px;
    height: 20px;
    width: 1px;
  }

  @media (prefers-color-scheme: dark) {
    span::before, span::after {
      background-color: #FFF;
    }
  }
</style>