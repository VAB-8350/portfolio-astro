---
import { getI18N } from '@i18n/index'
const i18n = getI18N(Astro.currentLocale)
---

<section class="grid grid-cols-4 md:grid-cols-[repeat(4,_minmax(200px,_1fr))] place-items-center auto-rows-[100px_auto_auto] md:auto-rows-[200px_auto] relative mt-3 bg-[rgba(255,_255,_255,_.4)] dark:bg-[rgba(0,_0,_0,_.5)]" id="experience">

  <div class="w-full h-full grid place-items-center border-r border-b border-outline-light dark:border-outline-dark col-span-4 md:col-span-4 relative">
    <span class="inline-block w-[20px] h-[20px] absolute bottom-[-10px] left-[-11px]" id="x" />
    <span class="absolute inline-block h-[1px] w-[100%] left-0 top-0" id="dash-line"/>
    <h2 class="text-black dark:text-white font-['Geist Bold'] font-bold text-3xl text-center">{i18n.EXPERIENCE.TITLE}</h2>
  </div>

  <div class="p-4 md:p-12 text-sm md:text-xl w-full h-full flex flex-col gap-4 border-r border-b border-outline-light dark:border-outline-dark col-span-4 md:col-span-2">

    <div class="flex items-center gap-2">
      <img loading="lazy" src="/devias.png" alt="Devias">
      <h4 class="text-xl md:text-3xl font-bold text-secondary-light-text dark:text-secondary-dark-text">Devias</h4>
    </div>

    <div class="flex flex-col gap-3">
      {
        i18n.EXPERIENCE.DEVIAS.map((text) => (
          <p class="text-secondary-light-text dark:text-secondary-dark-text text-pretty">{text}</p>
        ))
      }
    </div>
  </div>

  <div class="p-4 md:p-12 text-sm md:text-xl w-full h-full flex flex-col gap-4 border-r border-b border-outline-light dark:border-outline-dark col-span-4 md:col-span-2">
    <div class="flex items-center gap-2">
      <img loading="lazy" src="/arbot.png" alt="ArboT">
      <h4 class="text-xl md:text-3xl font-bold text-secondary-light-text dark:text-secondary-dark-text">ArboT</h4>
    </div>

    <div class="flex flex-col gap-3">
      {
        i18n.EXPERIENCE.ARBOT.map((text) => (
          <p class="text-secondary-light-text dark:text-secondary-dark-text text-pretty">{text}</p>
        ))
      }
    </div>
  </div>
  <span class="inline-block w-[20px] h-[20px] absolute bottom-[-10px] right-[-10px]"/>
</section>

<style>

  #dash-line {
    &::after {
      content: "";
      background: linear-gradient(to right, transparent, #FAFAFA);
      height: 100%;
      width: 500px;
      position: absolute;
      right: 0;
    }

    @media (max-width: 768px) {
      &::after{
        width: 100px;
      }
    }

    background: repeating-linear-gradient(90deg, #666666, #666666 10px, transparent 0px, transparent 15px);

    @media (prefers-color-scheme: dark) {
      background: repeating-linear-gradient(90deg, #A1A1A1, #A1A1A1 10px, transparent 0px, transparent 15px);
      &::after {
      background: linear-gradient(to right, transparent, #000);
      }
    }
  }
  #x::before, #x::after {
    content: '';
    position: absolute;
    background-color: #666;
    display: inline-block;
  }

  #x::before {
    top: 10px;
    width: 20px;
    height: 1px;
  }

  #x::after {
    left: 10px;
    height: 20px;
    width: 1px;
  }

  @media (prefers-color-scheme: dark) {
    #x::before, #x::after {
      background-color: #FFF;
    }
  }
</style>